--
-- XC_NOTRANS_BLOCK
--
-- This file contains tests for testing statements that cannot be run
-- within a transaction block. They verify that the cluster is consistent
-- even if one particular node aborts and others succeed.
------------
-- Test#1 : CREATE TABLESPACE
------------
BEGIN;
CREATE TABLESPACE xc_testspace1 LOCATION '@testtablespace@';
ERROR:  CREATE TABLESPACE cannot run inside a transaction block
ROLLBACK;
-- This should fail because we don't allow created on data node 1.
select exec_util_on_node('CREATE TABLESPACE xc_testspace1 LOCATION $LOC$@testtablespace@$LOC$', 1);
ERROR:  EXECUTE DIRECT non select command cannot be executed on Datanode
CONTEXT:  SQL statement "execute direct on (datanode_1) $$ CREATE TABLESPACE xc_testspace1 LOCATION $LOC$@testtablespace@$LOC$ $$"
PL/pgSQL function exec_util_on_node(character varying,integer) line 8 at EXECUTE
-- This should fail because we don't allow drop on data node 1.
select exec_util_on_node('drop TABLESPACE xc_testspace1 ', 1);
ERROR:  EXECUTE DIRECT non select command cannot be executed on Datanode
CONTEXT:  SQL statement "execute direct on (datanode_1) $$ drop TABLESPACE xc_testspace1  $$"
PL/pgSQL function exec_util_on_node(character varying,integer) line 8 at EXECUTE
-- Now this should work
CREATE TABLESPACE xc_testspace1 LOCATION '@testtablespace@';
------------
-- Test#2 CREATE DATABASE
------------
BEGIN;
CREATE DATABASE xc_db01 tablespace xc_testspace1;
ERROR:  CREATE DATABASE cannot run inside a transaction block
ROLLBACK;
-- This should fail because we don't allow created on data node 1.
select exec_util_on_node('CREATE DATABASE xc_db01 tablespace xc_testspace1', 1);
ERROR:  EXECUTE DIRECT non select command cannot be executed on Datanode
CONTEXT:  SQL statement "execute direct on (datanode_1) $$ CREATE DATABASE xc_db01 tablespace xc_testspace1 $$"
PL/pgSQL function exec_util_on_node(character varying,integer) line 8 at EXECUTE
-- This should work
CREATE DATABASE xc_db01 tablespace xc_testspace1;
-- This should fail because we don't allow drop on data node 1.
select exec_util_on_node('DROP DATABASE xc_db01', 1);
ERROR:  EXECUTE DIRECT non select command cannot be executed on Datanode
CONTEXT:  SQL statement "execute direct on (datanode_1) $$ DROP DATABASE xc_db01 $$"
PL/pgSQL function exec_util_on_node(character varying,integer) line 8 at EXECUTE
------------
-- Test#3: ALTER DATABASE SET TABLESPACE
------------
BEGIN;
alter database xc_db01 set tablespace xc_testspace1;
ERROR:  ALTER DATABASE SET TABLESPACE cannot run inside a transaction block
ROLLBACK;
-- Recreate database on global tablespace.
clean connection to all for database xc_db01;
-- drop database may faild, do not drop it
-- drop database xc_db01;
CREATE DATABASE xc_db02;
-- Insert some objects.
\c xc_db02
create table xc_tab1 (id int);
insert into xc_tab1 select generate_series(1, 50, 1);
\c regression
clean connection to all for database xc_db02;
-- Drop tablespace on data node 1.
select exec_util_on_node('drop TABLESPACE xc_testspace1 ', 1);
